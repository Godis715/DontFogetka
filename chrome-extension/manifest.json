{
    "name": "Nezabudka",
    "version": "1.0",
    "description": "Build an extension!",
    "manifest_version": 2,

    "icons": {
        "16": "./resources/icon.svg",
        "32": "./resources/icon.svg",
        "48": "./resources/icon.svg",
        "128": "./resources/icon.svg"
      },

    "content_scripts": 
    [
        {
            "matches": ["https://www.aviasales.ru/search/*"],
            "run_at": "document_end",
            "js": ["content-scripts/buyTicketListener.js"]
        }
    ],

    "background": 
    {
        "scripts": ["background/buyTicketNotif.js"],
        "persistent": false
    },
    
    "browser_action": 
    {
        "default_popup": "about.html"
    },

    "permissions": ["activeTab", "notifications"]
}